modules = ["java-graalvm22.3"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web App"

[[workflows.workflow]]
name = "Spring Boot Application"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn spring-boot:run"
waitForPort = 8080

[[workflows.workflow]]
name = "Flutter Web App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && dart run server.dart"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 40195
externalPort = 80

[[ports]]
localPort = 41061
externalPort = 3001

[deployment]
deploymentTarget = "vm"
run = ["mvn", "spring-boot:run"]
